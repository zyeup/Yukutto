{
  "containerDefinitions": [
      {
          "name": "api",
          "image": "<image uri>",
          "cpu": 0,
          "portMappings": [
              {
                  "name": "api-80-tcp",
                  "containerPort": 80,
                  "hostPort": 80,
                  "protocol": "tcp",
                  "appProtocol": "http"
              }
          ],
          "essential": true,
          "environment": [
              {
                  "name": "RAILS_ENV",
                  "value": "production"
              }
          ],
          "environmentFiles": [],
          "mountPoints": [],
          "volumesFrom": [],
          "secrets": [
              {
                  "name": "AWS_ACCESS_KEY_ID",
                  "valueFrom": "/ecs-param/aws-access-key-id"
              },
              {
                  "name": "AWS_SECRET_ACCESS_KEY",
                  "valueFrom": "/ecs-param/aws-secret-access-key"
              },
              {
                  "name": "DB_HOST",
                  "valueFrom": "/ecs-param/db-host"
              },
              {
                  "name": "DB_PASSWORD",
                  "valueFrom": "/ecs-param/db-password"
              },
              {
                  "name": "DB_USERNAME",
                  "valueFrom": "/ecs-param/db-username"
              },
              {
                  "name": "S3_BUCKET_NAME",
                  "valueFrom": "/ecs-param/s3-bucket-name"
              },
              {
                  "name": "S3_REGION",
                  "valueFrom": "/ecs-param/s3-region"
              },
              {
                  "name": "SECRET_KEY_BASE",
                  "valueFrom": "/ecs-param/secret-key-base"
              }
          ],
          "ulimits": [],
          "logConfiguration": {
              "logDriver": "awslogs",
              "options": {
                  "awslogs-group": "/ecs/yukutto-api",
                  "mode": "non-blocking",
                  "awslogs-create-group": "true",
                  "max-buffer-size": "25m",
                  "awslogs-region": "ap-northeast-1",
                  "awslogs-stream-prefix": "ecs"
              },
              "secretOptions": []
          },
          "systemControls": []
      }
  ],
  "family": "yukutto-api",
  "taskRoleArn": "ecsTaskExecutionRole",
  "executionRoleArn": "ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "volumes": [],
  "placementConstraints": [],
  "requiresCompatibilities": [
      "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "runtimePlatform": {
      "cpuArchitecture": "X86_64",
      "operatingSystemFamily": "LINUX"
  }
}
